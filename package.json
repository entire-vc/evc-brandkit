{
  "name": "evc-brandkit",
  "version": "0.1.0",
  "private": true,
  "description": "Entire VC Brand Kit - Design System & UI Components",
  "author": "Entire VC <dev@entire.vc>",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @entire-vc/docs dev",
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "storybook": "pnpm --filter @entire-vc/docs storybook",
    "release": "pnpm build && pnpm -r publish --no-git-checks"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.0",
    "svgo": "^4.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
